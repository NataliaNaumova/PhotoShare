@model MvcPL.Models.PhotoModel
<div id=@Model.Id.ToString()>
    @using (Ajax.BeginForm("Like", "Like", new { photoId = Model.Id },
            new AjaxOptions { UpdateTargetId = Model.Id.ToString(), InsertionMode = InsertionMode.Replace }))
    {
        if (Model.Likes.FirstOrDefault(l => l.UserLogin == User.Identity.Name) == null)
        {
            <button type="submit" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-heart">&nbsp;@Model.Likes.Count</span>
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-heart">&nbsp;@Model.Likes.Count</span>
            </button>
        }
    }
</div>