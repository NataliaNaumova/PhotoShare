@if (!Request.IsAuthenticated)
{
    <li>
        <a href=@Url.Action("Register", "Account")><span class="glyphicon glyphicon-user"></span> Sign Up</a>
    </li>
    <li>
        <a href=@Url.Action("Login", "Account")><span class="glyphicon glyphicon-log-in"></span> Log in</a>

    </li>
}
else
{
    
    <li>
        <a href=@Url.Action("UserPage", "User", new {login=User.Identity.Name})><span class="glyphicon glyphicon-user"></span> My profile</a>

    </li>
    <li>
        <a href=@Url.Action("LogOut", "Account")><span class="glyphicon glyphicon-log-out"></span> Log out</a>
    </li>
}